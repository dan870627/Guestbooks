@model Guestbooks.ViewModels.GuestbooksViewModel

@{
    ViewBag.Title = "Index";
}

<div id="CreateData">
    @Html.Action("Create")
</div>

<h2>留言板</h2>
<table>
    @if (!Model.DataList.Count.Equals(0))
    {
        foreach (var item in Model.DataList)
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.DataList[0].Account)
                </td>
                <td>
                    @item.Account
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.DataList[0].CreateTime)
                </td>
                <td>
                    @item.CreateTime
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.DataList[0].Content)
                </td>
                <td colspan="3">
                    @item.Content
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    @Html.ActionLink("修改留言", "Edit", new { Id = item.id })
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4">
                資料庫內查無資料
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
